# Environment Variables for CBOA Site
# Copy this file to .env.local for local development

# Site URL (update for production)
NEXT_PUBLIC_SITE_URL=https://refalberta.ca

# CMS Backend (for Decap CMS)
# For production, use git-gateway
NEXT_PUBLIC_CMS_BACKEND=git-gateway

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Storage Configuration
# Set to 'true' to use Supabase Storage, 'false' for localStorage (development)
# When false, files are stored in browser localStorage (limited to ~5MB)
# When true, files are uploaded to Supabase Storage (recommended for production)
NEXT_PUBLIC_USE_SUPABASE=false

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# SharePoint Integration (for form submissions to Excel)
# Get these values following docs/GET_SHAREPOINT_VARIABLES.md
SHAREPOINT_CLIENT_ID=3058cf94-dbee-4aef-96bb-9f5c394c277a
SHAREPOINT_TENANT_ID=c130843b-cc25-422d-bad6-7eec4735cc1b
SHAREPOINT_CLIENT_SECRET=your-client-secret-from-azure
SHAREPOINT_SITE_ID=get-from-graph-explorer
SHAREPOINT_DRIVE_ID=get-from-graph-explorer
SHAREPOINT_WORKBOOK_ID=get-from-excel-url